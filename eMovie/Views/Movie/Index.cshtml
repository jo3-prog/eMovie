@model IEnumerable<Movie>


<div class="album py-5 px-4 bg-light">
    <div class="container">
        <div class="text-center">
            <div class="">
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <div class="">
                            <h1 class="fw-bold">Movies</h1>
                        </div>
                        <div class="d-flex gap-3">
                            <div class="m-auto">
                                <a class="btn btn-success btn-sm" asp-controller="Movie" asp-action="Create">+ New Movie</a>
                            </div>
                            <form class="form-control-sm d-flex justify-content-center align-items-center p-0 gap-1" asp-action="Search">
                                <input name="search" class="form-control" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-sm btn-outline-dark my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row text-center mt-5">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <p class="fw-bold">@item.Title</p>
                    <img class="img-fluid" src="@item.ImageUrl" alt="">
                    <div class="d-flex gap-2">
                        <a id="trailerBtn" class="btn btn-secondary btn-sm mt-2" asp-area="" asp-controller="Movie" asp-action="Trailer" asp-route-id="@item.Id">Watch trailer</a>
                        <a class="btn btn-danger btn-sm mt-2" asp-area="" asp-route-id="@item.Id" asp-controller="Movie" asp-action="Detail">View</a>
                    </div>
                </div>
                @* <iframe id="trailer" class="trailer active" name="iframe_a" title="Trailer Iframe"></iframe> *@
            }
        </div>
@*         <a class="btn-sm mt-2" asp-area="" asp-controller="Movie" asp-action="Index">Back to list</a>
 *@    </div> 
</div>