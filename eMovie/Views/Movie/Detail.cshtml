@model Movie

<div class="container">
    <h1 class="text-center mb-5">Movie Info</h1>
    <div class="d-flex gap-3">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="" height="80%" />
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-7">
                    <div class="d-flex flex-column mb-3">
                        <div class="d-flex gap-3 mb-1">
                            <div class="">
                                <h3 class="fw-bold">@Model.Title</h3>
                            </div>
                            <div class="d-flex gap-1">
                                <div>
                                    <a class="btn btn-warning btn-sm" asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                                </div>
                                <div>
                                    <form asp-action="Delete" asp-route-id="@Model.Id">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Movie?')">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p>@Model.Description</p>
            <h3 class="my-3">Movie Details</h3>
            <ul>
                <li>Genre: @Model.MovieGenre</li>
                <li>Duration: @Model.Duration mins</li>
                <li>Release Date: @Model.ReleaseDate</li>
            </ul>
            <a asp-action="Donate" asp-controller="Movie" class="btn btn-dark">Donate <i class="fa-solid fa-hand-holding-heart"></i></a>
        </div>
    </div>
</div>